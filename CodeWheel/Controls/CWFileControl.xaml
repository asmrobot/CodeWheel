<UserControl x:Class="CodeWheel.Controls.CWFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CodeWheel.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button  Margin="0 12 12  12" HorizontalAlignment="Left" x:Name="rendercontrol" Width="70px" Height="30px" Content="选择文件" Click="rendercontrol_Click" />
        <TextBox x:Name="controlval"  Grid.Column="1" Height="30px"/>
    </Grid>
</UserControl>
